{
  "manifest_version": 3,
  "name": "ChatGPT Summarizer",
  "version": "1.0",
  "permissions": ["contextMenus", "storage", "tabs", "activeTab"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
