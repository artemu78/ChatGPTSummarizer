{
  "manifest_version": 3,
  "name": "ChatGPT Summarizer",
  "version": "1.1",
  "permissions": ["contextMenus", "storage", "tabs", "activeTab"],
  "icons": {
    "48": "icons/icon48.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
