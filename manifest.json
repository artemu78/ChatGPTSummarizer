{
  "manifest_version": 3,
  "name": "OpenAI API Explorer",
  "version": "1.4.31",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab"
  ],
  "description": "Use OpenAI to summarize, ask questions, and explain text.",
  "icons": {
    "48": "icons/icon48.png"
  },
  "action": {
    "default_popup": "dist/options.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "dist/out.js"
  },
  "options_page": "dist/options.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "dist/content.js"
      ]
    }
  ]
}
